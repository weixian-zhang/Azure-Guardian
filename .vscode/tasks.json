{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run OPA container",
            "type": "shell",
            "command": "docker run -it --rm -p 8181:8181 openpolicyagent/opa run --server --addr :8181"
        },
        {
            "label": "unit test shared",
            "type": "shell",
            "command": "python -m unittest discover -s '${workspaceFolder}\\src\\shared\\tests' -p 'test_*.py' ",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        }
    ]
}